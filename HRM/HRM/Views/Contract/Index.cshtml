
@{
    ViewBag.Title = "Quản lý hợp đồng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link type="text/css" href="~/Content/css/addgroupadmin.css" rel="stylesheet" />

<div class="title_line d-flex" style="margin-bottom: 0px;">
    <div class="container">
        <span class="title_line_item">
            <font color="#e56f21"><a href="#" style="color:#e56f21;font-weight: 600;">Quản lý hợp đồng</a></font>
        </span>        
    </div>
</div>

<div class="k-portlet__body">    
    <div class="mt-3">
        <!-- Form -->
        <div>
            <form class="form-inline shadow-lg p-3 mb-5 bg-white rounded" style="border-radius: 10px">
                <div class="content-body contain-form-input col-12">
                    <div class="form-group col-6" style="float: left">
                        <label class="label-input" for="EmpCode">Mã nhân viên</label>
                        <input class="txt-input form-control" type="text" id="txtEmpCode" name="EmpCode">
                        <br />
                        <label class="label-input" for="ContractType">Loại hợp đồng</label>
                        <select class="form-control txt-input" name="ContractType" id="slContractType">
                            <option value="">Tất cả</option>
                            <option value="Hợp đồng học việc">Hợp đồng học việc</option>
                            <option value="Hợp đồng thử việc">Hợp đồng thử việc</option>
                            <option value="Hợp đồng 6 tháng">Hợp đồng 6 tháng</option>
                            <option value="Hợp đồng 1 năm">Hợp đồng 1 năm</option>
                            <option value="Hợp đồng 3 năm">Hợp đồng 3 năm</option>
                            <option value="Hợp đồng vô thời hạn">Hợp đồng vô thời hạn</option>
                        </select>
                        <br />
                        <label class="label-input" for="ContractNumber">Số hiệu hợp đồng</label>
                        <select class="form-control txt-input" name="ContractNumber" id="slContractNumber">
                            <option value="">Tất cả</option>
                            <option value="CV/01">CV/01</option>
                            <option value="CV/02">CV/02</option>
                            <option value="QL/01">QL/01</option>
                            <option value="QL/02">QL/02</option>
                            <option value="GD/01">GD/01</option>
                            <option value="GD/02">GD/02</option>
                        </select>
                        <br />
                        <label class="label-input" for="Position">Vị trí</label>
                        <select class="form-control txt-input" name="Position" id="slPosition">
                            <option value="">Tất cả</option>
                            <option value="Nhân viên">Nhân viên</option>
                            <option value="Chuyên viên">Chuyên viên</option>
                            <option value="Trưởng phòng">Trưởng phòng</option>
                            <option value="Phó phòng">Phó phòng</option>
                            <option value="Giám đốc">Giám đốc</option>
                            <option value="Phó giám đốc">Phó giám đốc</option>
                        </select>
                        <br />
                    </div>
                    <div class="form-group col-6">
                        <label class="label-input" for="EffecttiveDate">Ngày hợp đồng có hiệu lực</label>
                        <input class="txt-input form-control" type="date" id="txtEffecttiveDate" name="EffecttiveDate">
                        <br />
                        <label class="label-input" for="ExpireDate">Ngày hết hạn hợp đồng</label>
                        <input class="txt-input form-control" type="date" id="txtExpireDate" name="ExpireDate">
                        <br />
                        <label class="label-input" for="SignDate">Ngày ký hợp đồng</label>
                        <input class="txt-input form-control" type="date" id="txtSignDate" name="SignDate">
                        <br />
                        <label class="label-input" for="SignEmp">Người phê duyệt hợp đồng</label>
                        <input class="txt-input form-control" type="text" id="txtSignEmp" name="SignEmp">
                        <br />
                        <label class="label-input" for="ManageEmp">Người quản lý</label>
                        <input class="txt-input form-control" type="text" id="txtManageEmp" name="ManageEmp">
                        <br />
                    </div>
                </div>
                <div style="width: 100%; margin-top: 1.5%; margin-left: -6%;">
                    <input class="input-btn btn input-btn-left" id="btnAdd" type="button" value="Thêm" />
                    <input class="input-btn btn input-btn-left" id="btnEdit" type="button" value="Sửa" style="display: none" />
                    <input class="input-btn btn" id="btnSearch" type="button" value="Tìm kiếm" />
                    <input class="input-btn btn" id="btnRefresh" type="button" value="Làm mới" />
                </div>
            </form>
        </div>
        <!-- List -->
        <div>
            <table id="listContract" class="table shadow" style="width: 100%;">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Mã nhân viên</th>
                        <th>Tên nhân viên</th>
                        <th>Loại hơp đồng</th>
                        <th>Số hiệu hơp đồng</th>                        
                        <th>Ngày hiệu lực</th>
                        <th>Ngày hết hạn</th>
                        <th>Ngày ký</th>
                        <th>Người phê duyệt</th>
                        <th>Người quản lý</th>
                        <th>Chức Năng</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">

	$(document).ready( function() {

        var renderColumns = [
            {
                data: "ID",
            },
            {
                data: "EmpCode",
            },
            {
                data: "FullName",
            },
            {
                data: "ContractType",
            },
            {
                data: "ContractNumber",                
            },
            {
                data: "EffecttiveDateStr",
            },
            {
                data: "ExpireDateStr",
            },
            {
                data: "SignDateStr",
            },
            {
                data: "SignEmp",
            },
            {
                data: "ManageEmp",
            },            
            {
                data: "EmpCode",
                render: function (data) {
                    return `<div class="d-inline-flex w-100">
                              <a class='EditAccount btn text-primary' data-id='${data}' title='Sửa nhân viên'><i class="far fa-edit"></i></a>     
                            </div >`;
                }
            },
        ]

        var Contract = function() {

            this.init = function() {
                loadData();
                registerEvents();
            }

            var loadData = function () {
                
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetContract", "Contract")',
                    dataType: 'json',
                    data: {} ,
                    success: function (data) {

                        //console.log(data);

                        $('#listContract').DataTable({
                            'ordering': false,
                            destroy: true,
                            'searching': false,
                            lengthChange: false,
                            "bInfo": true,
                            'paging': false,
                            dom: "lti<'d-flex pagingListUser justify-content-center'p>",
                            className: 'dt-body-right',
                            data: data,
                            columns: renderColumns
                        });

                        
                    },
                    error: function (err) {
                        console.log(err);
                    }
                });

            }

            var registerEvents = function () {

                // Action search
                $('body').on('click', '#btnSearch', function (e) {
                    e.preventDefault();

                    var dataForm = $('form').serialize();
                    
                    reloadData(dataForm);
                });

                // Action click edit record
                $('body').on('click', '.EditAccount', function (e) {
                    e.preventDefault();

                    $('#btnAdd').hide();
                    $('#btnEdit').show();

                    let EmpCode = $(this).data('id');

                    $.ajax({
                        type: "GET",
                        url: '@Url.Action("GetContract", "Contract")',
                        dataType: 'json',
                        data: { EmpCode } ,
                        success: function (data) {

                            console.log(data);

                            if (Array.isArray(data) && data.length > 0) {
                                let obj = data[0];
                                
                                $('#txtEmpCode').val(obj.EmpCode);
                                $('#slContractType').val(`${obj.ContractType}`);
                                $('#slContractNumber').val(`${obj.ContractNumber}`);
                                $('#slPosition').val(obj.Position);
                                $('#txtEffecttiveDate').val(parseDate(obj.EffecttiveDate));
                                $('#txtExpireDate').val(parseDate(obj.ExpireDate));
                                $('#txtSignDate').val(parseDate(obj.SignDate));
                                $('#txtSignEmp').val(obj.SignEmp);
                                $('#txtManageEmp').val(obj.ManageEmp);

                            }
                            
                        },
                        error: function (err) {
                            console.log(err);
                        }
                    });
                });

                // Action click add user record
                $('body').on('click', '#btnAdd', function (e) {
                    e.preventDefault();

                    let contract = $('form').serialize();
                    
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("InsertContract", "Contract")',
                        dataType: 'json',
                        data: contract,
                        success: function (data) {

                            //console.log(data);

                            isMessageSuccess(data);

                            reloadData();
                        },
                        error: function (err) {
                            console.log(err);
                        }
                    });
                });

                // Action click upadte user record
                $('body').on('click', '#btnEdit', function (e) {
                    e.preventDefault();

                    let contract = $('form').serialize();
                    
                    $.ajax({
                        type: "PUT",
                        url: '@Url.Action("UpdateContract", "Contract")',
                        dataType: 'json',
                        data: contract,
                        success: function (data) {

                            //console.log(data);

                            isMessageSuccess(data);

                            reloadData();
                        },
                        error: function (err) {
                            console.log(err);
                        }
                    });
                });

                // button làm mới form
                $('body').on('click', '#btnRefresh', function (e) {
                    e.preventDefault();
    
                    $(this).closest('form').find("input[type=text], input[type=tel], input[type=number], input[type=date], textarea").val("");

                    $('#btnEdit').hide();
                    $('#btnAdd').show();
                });

            }

            function reloadData(employeeViewModel) {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetContract", "Contract")',
                    dataType: 'json',
                    data: employeeViewModel ,
                    success: function (data) {

                        console.log(data);

                        $('#listContract').DataTable({
                            'ordering': false,
                            destroy: true,
                            'searching': false,
                            lengthChange: false,
                            "bInfo": true,
                            'paging': false,
                            dom: "lti<'d-flex pagingListUser justify-content-center'p>",
                            className: 'dt-body-right',
                            data: data,
                            columns: renderColumns
                        });

                    },
                    error: function (err) {
                        console.log(err);
                    }
                });
            }

            function parseDate(strDate) {

                let date = new Date(Number(strDate.replace(/\D+/g, "")));

                return convert(date);
            }

            function convert(str) {
                var date = new Date(str),
                    mnth = ("0" + (date.getMonth() + 1)).slice(-2),
                    day = ("0" + date.getDate()).slice(-2);
                return [date.getFullYear(), mnth, day].join("-");
            }
        }

        var contract = new Contract();
        contract.init();

    });

</script>

